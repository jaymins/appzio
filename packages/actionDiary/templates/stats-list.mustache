
{{#data}}


    <div class="diaryentry" class="diaryentry">

        <b>{{actiontitle}}</b> -- {{username}} -- {{date}}<br>

        <div class="adminentry">
            {{{msg}}}


            {{#comment}}
                <div class="comment">
                    {%comment%}:
                    {{{comment}}}
            </div>
            {{/comment}}
        </div>

        <div class="diarydelete">
            <a href="{{baseurl}}&a=delete&id={{id}}&ai={{ai}}" onclick="return confirm('Are you sure you want to delete this item?');">
            <img src="/images/milky/32/report_delete.png" width="25"></a>

            <a href="{{baseurl}}&a=comment&id={{id}}#commentbox">
            <img src="/images/milky/32/comment_add.png" width="25"></a>
        </div>

        {{#commentbox}}
            <div class="commentbox" id="commentbox">

                {{{commentbox}}}

            </div>
        {{/commentbox}}


    </div>

    <script type="text/javascript">
        $(document).ready(
                function()
                {
                    $('#comment_{{id}}').redactor({imageUpload: '{{{uploadurl}}}',
                        imageGetJson: '{{{getimageurl}}}'
                    });
                }
        );


    </script>

{{/data}}


