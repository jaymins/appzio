      {{#infobut}} 
	function showBrief(){
            document.getElementById("commentlist").style.display = 'none';
	    document.getElementById("commentlist").style.visibility = 'hidden';
	    document.getElementById("postercontainer").style.display = 'none';
	    document.getElementById("postercontainer").style.visibility = 'hidden';
	    
	    document.getElementById("brief").style.display = 'block';
	    document.getElementById("brief").style.visibility = 'visible';
	   
        }

	function hideBrief(){
            document.getElementById("commentlist").style.display = 'block';
	    document.getElementById("commentlist").style.visibility = 'visible';
	    document.getElementById("postercontainer").style.display = 'block';
	    document.getElementById("postercontainer").style.visibility = 'visible';
	    
	    document.getElementById("brief").style.display = 'none';
	    document.getElementById("brief").style.visibility = 'hide';
	   
        }
