         function setHeightPostBox(){
                postBox=document.getElementById('postercontainer');
	        postBoxHeight=postBox.offsetHeight;
		newHeight=postBoxHeight-30;
		postBox.style.height=newHeight+'px';
	 }
           
          
         function setHeight(){
	        postBox=document.getElementById('postercontainer');
	        commentHeight=document.getElementById('commentlist').offsetHeight;
		postBoxHeight=postBox.offsetHeight;
		var w = window,
                    d = document,
                    e = d.documentElement,
                    g = d.getElementsByTagName('body')[0];
   
                windowHeight = w.innerHeight;
		contentHeight=commentHeight+postBoxHeight;
		if (windowHeight>contentHeight) {
		     postBox.style.position='absolute';
		     postBox.style.bottom='0px';
		} else {
		   postBox.style.position='absolute';
		   postBox.style.bottom='0px';
		}
		
	    }


	      function setHeightBrief(){
	        titleBox=document.getElementById('bbs_title');
	        briefHeight=document.getElementById('bbs_brief').offsetHeight;
		titleBoxHeight=titleBox.offsetHeight;
		var w = window,
                    d = document,
                    e = d.documentElement,
                    g = d.getElementsByTagName('body')[0];
   
                windowHeight = w.innerHeight;
		contentHeight=briefHeight+titleBoxHeight;
		if (windowHeight>contentHeight) {
		     titleBox.style.position='absolute';
		     titleBox.style.bottom='0px';
		} else {
		   titleBox.style.position='absolute';
		   titleBox.style.bottom='0px';
		}
		
	    }


	    function setPadding  (){
	        postBox=document.getElementById('postercontainer');
